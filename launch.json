{
    "version": "0.2.0",
    "configurations": [
      {
        "type": "node",
        "request": "launch",
        "name": "Next.js: Server-Side Debugging",
        "program": "${workspaceFolder}/node_modules/next/dist/bin/next",
        "args": ["dev"],
        "cwd": "${workspaceFolder}",
        "protocol": "inspector",
        "outFiles": ["${workspaceFolder}/.next/**/*.js"],
        "env": {
          "NODE_ENV": "development"
        }
      }
    ]
  }